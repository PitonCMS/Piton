{
    "name": "pitoncms/piton",
    "description": "CMS for small websites",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/PitonCMS/Piton",
    "authors": [
        {
            "name": "Wolfgang Moritz",
            "email": "wolfmoritz@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "pitoncms/engine": "~0"
        },
    "autoload": {
        "psr-4": {
            "Piton\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "Piton\\Library\\Utilities\\PitonBuild::createProject",
            "sh vendor/pitoncms/engine/postUpdate.sh"
        ],
        "post-update-cmd": [
            "sh vendor/pitoncms/engine/postUpdate.sh"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}